{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": ".tmp",
        "sourceMap": true,
        "jsx": "react",
        "lib": ["es2015", "dom"],
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "noEmitOnError": true,
        "removeComments": true
    }
}
